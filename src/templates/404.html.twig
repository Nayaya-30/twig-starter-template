{% extends 'base_public.html.twig' %}

{% block title %}404 - Page Not Found{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gradient-to-br from-gray-900 to-gray-800">
  <div class="text-center">
    <h1 class="text-6xl font-bold text-yellow-400 mb-4">404</h1>
    <h2 class="text-3xl font-semibold text-white mb-6">Page Not Found</h2>
    <p class="text-gray-300 mb-8 max-w-md mx-auto">
      Sorry, the page you're looking for doesn't exist or has been moved.
    </p>
    <a href="/" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
      Go Back Home
    </a>
  </div>
</div>