{% extends 'base_app.html.twig' %}

{% block title %}Dashboard - TicketFlow{% endblock %}

{% block body %}
<div class="page min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900">
  <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-gray-800 mb-2 dark:text-white">Welcome, {{ currentUser.name|default('User') }}</h2>
      <p class="text-gray-600 dark:text-gray-300">Overview of your ticket management</p>
    </div>

    <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-6 mb-12">
      <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 dark:bg-gray-800 dark:border-gray-700">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M3 3v18h18V3H3zm2 2h14v14H5V5zm7 2v10m-5-5h10"/></svg>
          </div>
          <span class="font-semibold text-blue-600 dark:text-white">Total</span>
        </div>
        <h3 class="text-4xl font-bold text-gray-800 dark:text-white">{{ tickets|length }}</h3>
        <p class="text-gray-600 mt-2 dark:text-gray-300">Total Tickets</p>
      </div>
      <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 dark:bg-gray-800 dark:border-gray-700">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 17v-6a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v6"/></svg>
          </div>
          <span class="font-semibold text-green-600 dark:text-white">Open</span>
        </div>
        <h3 class="text-4xl font-bold text-gray-800 dark:text-white">{{ openTickets }}</h3>
        <p class="text-gray-600 mt-2 dark:text-gray-300">Open Tickets</p>
      </div>
      <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 dark:bg-gray-800 dark:border-gray-700">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900/30 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 8v4l3 3"/></svg>
          </div>
          <span class="font-semibold text-yellow-600 dark:text-white">In Progress</span>
        </div>
        <h3 class="text-4xl font-bold text-gray-800 dark:text-white">{{ inProgressTickets }}</h3>
        <p class="text-gray-600 mt-2 dark:text-gray-300">In Progress</p>
      </div>
      <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 dark:bg-gray-800 dark:border-gray-700">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/30 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7"/></svg>
          </div>
          <span class="font-semibold text-purple-600 dark:text-white">Resolved</span>
        </div>
        <h3 class="text-4xl font-bold text-gray-800 dark:text-white">{{ closedTickets }}</h3>
        <p class="text-gray-600 mt-2 dark:text-gray-300">Resolved Tickets</p>
      </div>
    </div>

    <div class="mb-8">
      <h3 class="text-2xl font-bold text-gray-800 mb-4 dark:text-white">Quick Actions</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <a href="/tickets" class="flex flex-col items-center justify-center p-6 bg-blue-50 hover:bg-blue-100 rounded-xl transition-all group dark:bg-blue-900/30 dark:hover:bg-blue-900/50">
          <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M2 9.5V7a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v2.5a2 2 0 0 1-2 2V17a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2v-5.5a2 2 0 0 1 2-2z"/></svg>
          </div>
          <span class="font-semibold text-gray-800 dark:text-white">Manage Tickets</span>
        </a>
        <a href="/tickets/new" class="flex flex-col items-center justify-center p-6 bg-green-50 hover:bg-green-100 rounded-xl transition-all group dark:bg-green-900/30 dark:hover:bg-green-900/50">
          <div class="w-12 h-12 bg-green-600 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 5v14m7-7H5"/></svg>
          </div>
          <span class="font-semibold text-gray-800 dark:text-white">Create Ticket</span>
        </a>
        <a href="/reports" class="flex flex-col items-center justify-center p-6 bg-purple-50 hover:bg-purple-100 rounded-xl transition-all group dark:bg-purple-900/30 dark:hover:bg-purple-900/50">
          <div class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M3 3v18h18V3H3zm2 2h14v14H5V5zm7 2v10m-5-5h10"/></svg>
          </div>
          <span class="font-semibold text-gray-800 dark:text-white">View Reports</span>
        </a>
        <a href="/analytics" class="flex flex-col items-center justify-center p-6 bg-yellow-50 hover:bg-yellow-100 rounded-xl transition-all group dark:bg-yellow-900/30 dark:hover:bg-yellow-900/50">
          <div class="w-12 h-12 bg-yellow-500 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 8v4l3 3"/></svg>
          </div>
          <span class="font-semibold text-gray-800 dark:text-white">View Analytics</span>
        </a>
      </div>
    </div>

    <div class="mt-8 bg-white p-6 rounded-2xl shadow-lg dark:bg-gray-800 relative">
      <h3 class="text-xl font-bold text-gray-800 mb-4 dark:text-white">Analytics</h3>
      <div class="w-full overflow-x-auto min-h-[400px] flex items-center justify-center">
        <p class="text-gray-500 dark:text-gray-400 text-center py-8">No data available for analytics. Create some tickets to see the chart.</p>
      </div>
    </div>
  </div>
</div>
{% endblock %}