{% extends 'base_public.html.twig' %}

{% block title %}Sign Up - TicketFlow{% endblock %}

{% block body %}
<div class="page flex items-center justify-center min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-950 px-4">
  <form class="bg-white dark:bg-gray-800 p-8 sm:p-10 rounded-2xl shadow-xl w-full max-w-md animate-bounce-in" method="post">
    <h2 class="text-3xl font-bold text-center mb-6 text-gray-800 dark:text-white">Create Account</h2>

    {# Flash messages #}
    {% if app.flashes %}
      {% for label, messages in app.flashes %}
        {% for msg in messages %}
          <div class="mb-4 px-4 py-3 rounded-md text-sm {{ label== 'success' ? 'bg-green-50 text-green-800' : label == 'error' ? 'bg-red-50 text-red-800' : 'bg-gray-50 text-gray-800' }}">
            {{ msg }}
          </div>
        {% endfor%}
      {% endfor %}
    {% elseif flash_message is defined %}
      <div class="mb-4 px-4 py-3 rounded-md text-sm {{ flash_type|default('info') == 'success' ? 'bg-green-50 text-green-800' : 'bg-red-50 text-red-800' }}">
        {{ flash_message }}
      </div>
    {% endif %}

    {# Name #}
    <div class="mb-4">
      <label class="block text-gray-700 dark:text-gray-200 text-sm font-medium mb-1">Full Name</label>
      <input type="text" name="name" value="{{ name|default('') }}" class="w-full p-2 border rounded-md dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent {{ errors.name ? 'border-red-500' : '' }}" />
      {% if errors.name %}<p class="text-red-500 text-sm">{{ errors.name }}</p>{% endif %}
    </div>

    {# Email #}
    <div class="mb-4">
      <label class="block text-gray-700 dark:text-gray-200 text-sm font-medium mb-1">Email</label>
      <input type="email" name="email" value="{{ email|default('') }}" class="w-full p-2 border rounded-md dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent {{ errors.email ? 'border-red-500' : '' }}" />
      {% if errors.email %}<p class="text-red-500 text-sm">{{ errors.email }}</p>{% endif %}
    </div>

    {# Password #}
    <div class="mb-4">
      <label class="block text-gray-700 dark:text-gray-200 text-sm font-medium mb-1">Password</label>
      <input type="password" name="password" class="w-full p-2 border rounded-md dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent {{ errors.password ? 'border-red-500' : '' }}" />
      {% if errors.password %}<p class="text-red-500 text-sm">{{ errors.password }}</p>{% endif %}
    </div>

    {# Confirm Password #}
    <div class="mb-6">
      <label class="block text-gray-700 dark:text-gray-200 text-sm font-medium mb-1">Confirm Password</label>
      <input type="password" name="confirmPassword" class="w-full p-2 border rounded-md dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent {{ errors.confirmPassword ? 'border-red-500' : '' }}" />
      {% if errors.confirmPassword %}<p class="text-red-500 text-sm">{{ errors.confirmPassword }}</p>{% endif %}
    </div>

    {# Buttons #}
    <div class="w-full flex flex-col sm:flex-row gap-3">
      <button type="submit" class="w-full py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-md transition-transform transform active:scale-95">
        Sign Up
      </button>
    </div>

    <p class="text-sm text-center mt-4 text-gray-600 dark:text-gray-300">
      Already have an account? <a href="/login" class="text-indigo-600 hover:underline cursor-pointer">Log in</a>
    </p>

    <div class="text-center mt-4">
      <a href="/" class="text-indigo-600 hover:text-indigo-800 font-semibold transition btn-bounce">‚Üê Back to Home</a>
    </div>
  </form>
</div>
{% endblock %}