{% extends 'base_public.html.twig' %}

{% block title %}TicketFlow - Home{% endblock %}

{% block body %}
<div class="page min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-950 flex flex-col">
  <div class="flex-grow flex flex-col items-center justify-center px-4 py-12 sm:px-6 lg:px-8">
    <div class="max-w-3xl text-center">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-gray-900 dark:text-white mb-6">
        <span class="block">Streamline Your</span>
        <span class="block text-indigo-600">Ticket Management</span>
      </h1>
      <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-300 mb-10 max-w-2xl mx-auto">
        TicketFlow helps teams track, prioritize, and resolve issues efficiently. Simplify your workflow and boost productivity.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="/signup" class="px-8 py-4 bg-indigo-600 text-white font-semibold rounded-lg shadow-lg hover:bg-indigo-700 transition-all transform hover:-translate-y-1">
          Get Started
        </a>
        <a href="/login" class="px-8 py-4 bg-white text-gray-800 font-semibold rounded-lg shadow-lg hover:bg-gray-50 transition-all border border-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700">
          Sign In
        </a>
      </div>
    </div>
  </div>

  <section class="py-16 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">
          Powerful Features
        </h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Everything you need to manage tickets efficiently and collaborate seamlessly
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-gray-50 dark:bg-gray-700 p-8 rounded-2xl shadow-lg">
          <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/30 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Ticket Tracking</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Create, assign, and track tickets with detailed descriptions, priorities, and status updates.
          </p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 p-8 rounded-2xl shadow-lg">
          <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Real-time Updates</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Stay informed with live updates and notifications on ticket status changes and comments.
          </p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 p-8 rounded-2xl shadow-lg">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Analytics Dashboard</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Gain insights with comprehensive analytics and visualizations of your ticket management performance.
          </p>
        </div>
      </div>
    </div>
  </section>
</div>
{% endblock %}